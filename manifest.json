{
    "manifest_version": 3,
    "name": "Tab Sandwich",
    "version": "1.3",
    "description": "A straightforward Chrome extension designed to save browser tabs.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": ["tabs"]
}